{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "isolatedModules": false,
    "preserveWatchOutput": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true
  },
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/dist",
      "**/build",
      "**/lib",
      "**/.turbo",
      "**/.next",
      "**/.vercel",
      "**/coverage",
      "**/.cache",
      "**/out",
      "**/storybook-static",
      "**/tmp",
      "**/temp",
      "**/.git",
      "**/.husky"
    ],
    "excludeFiles": [
      "**/*.log",
      "**/pnpm-lock.yaml",
      "**/package-lock.json",
      "**/yarn.lock"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "lib",
    ".turbo",
    ".next",
    ".vercel",
    "coverage",
    ".cache",
    "out",
    "storybook-static",
    "tmp",
    "temp",
    "**/__generated__/**",
    "**/generated/**",
    "**/prisma/generated/**"
  ]
} 