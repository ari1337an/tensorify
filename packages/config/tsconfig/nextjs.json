{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    ".next",
    ".vercel",
    "coverage",
    ".cache",
    "out",
    "storybook-static",
    "**/__generated__/**",
    "**/generated/**",
    "**/prisma/generated/**"
  ]
} 