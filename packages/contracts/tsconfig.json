{
  "extends": "../config/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "strict": true,
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/__generated__/**",
    "**/generated/**"
  ]
}
