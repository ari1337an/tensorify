{
  "extends": "../../packages/config/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@workflow/*": [
        "./src/app/(application)/(protected)/(canvas)/_workflow/*"
      ],
      "@canvas/*": ["./src/app/(application)/(protected)/(canvas)/*"],
      "@onboarding/*": ["./src/app/(application)/(onboarding)/*"],
      "@enterprise/*": ["./src/app/(application)/(protected)/(enterprise)/*"],
      "@app/*": ["./src/app/*"],
      "@packages/*": ["../../packages/*"]
    },
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
