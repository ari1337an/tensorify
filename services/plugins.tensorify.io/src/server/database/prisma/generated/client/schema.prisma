generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plugin {
  id          String   @id @default(cuid())
  name        String
  description String
  githubUrl   String
  status      String
  tags        String?
  sdkVersion  String   @default("1.0.0")
  version     String   @default("1.0.0")
  slug        String // Format: @username/plugin-name:version
  authorName  String
  authorId    String
  isPublic    Boolean  @default(true)
  readme      String? // README content from the plugin repository
  pluginType  String   @default("miscellaneous") // NodeType category from SDK
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([slug])
  @@index([authorId])
  @@index([pluginType]) // Index for efficient category-based queries
}

model User {
  id        String   @id @default(uuid())
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
