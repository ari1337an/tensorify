{
    "tasks": {
      "prebuild": {
        "cache": false,
        "dependsOn": [],
        "env": ["NODE_ENV"]
      },
      "build": {
        "dependsOn": ["prebuild", "^build"],
        "outputs": ["dist/**", "lib/**", ".next/**", "build/**"],
        "env": ["NODE_ENV"]
      },
      "dev": {
        "cache": false,
        "persistent": true,
        "dependsOn": ["^build"],
        "env": ["NODE_ENV", "TEST_JWT_SECRET", "CLERK_JWKS_URL", "S3_REGION", "S3_ACCESS_KEY_ID", "S3_SECRET_ACCESS_KEY", "S3_ENDPOINT", "S3_BUCKET_NAME"]
      },
      "test": {
        "dependsOn": ["build"],
        "outputs": [],
        "env": ["NODE_ENV", "TEST_JWT_SECRET"]
      },
      "generate:tsrest": {
        "cache": false,
        "outputs": ["src/app/api/v1/_contracts/index.ts"]
      },
      "generate:tsrest:client": {
        "cache": false,
        "outputs": ["src/app/api/v1/_client/client.ts"]
      },
      "prisma": {
        "cache": false,
        "env": ["NODE_ENV"]
      },
      "lint": {
        "dependsOn": ["^build"],
        "outputs": [],
        "env": ["NODE_ENV"]
      }
    }
  }